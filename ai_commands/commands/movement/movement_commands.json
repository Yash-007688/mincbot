{
    "commands": {
        "move": {
            "description": "Move bot to specific coordinates",
            "format": "move <bot_name> <x> <y> <z>",
            "example": "move Bot1 100 64 200",
            "python_handler": "handle_move_command"
        },
        "follow": {
            "description": "Make bot follow another bot",
            "format": "follow <bot_name> <target_bot>",
            "example": "follow Bot1 Bot2",
            "python_handler": "handle_follow_command"
        },
        "stop": {
            "description": "Stop bot movement",
            "format": "stop <bot_name>",
            "example": "stop Bot1",
            "python_handler": "handle_stop_command"
        }
    }
} 